<div class="card container text-center">
    <h4>Questions about walking</h4>
    <% @questions.each do |question| %>
        <div class='card' style='margin:5px;'>
            <div class="card-body">
                <h5 class='card-title'>
                    <%= link_to(question.user.name, question.user) %> asks <%= link_to(question.title, question) %>
                </h5>
                <p class='card-text'>
                    <%= truncate(question.body, length: 150, separator: ' ') %>
                </p>
            </div>
        </div>
    <% end %>

    <div class="container text-center" style='margin:5px;'>
        <%= link_to 'Ask a Question', new_question_path, class: 'btn btn-primary btn-lg' %>
    </div>
</div>

